# 注意此cmake文件中的3个变量名
# MOVESENSE_INCLUDE_DIR -- <name>_INCLUDE_DIR
# MOVESENSE_LIBRARY     -- <name>_LIBRARY
# MOVESENSE_FOUND       -- <name>_FOUND
# 惯例需要定义这3个变量，命名规则如上，以便与cmake预定义的cmake模块中的变量名统一

# FIND_PATH和FIND_LIBARY的path部分，一定要是.h文件和lib文件所在的当前目录，否则找不到
FIND_PATH(MOVESENSE_INCLUDE_DIR MoveSenseCamera.h 
    /usr/include/movesense 
	/usr/local/include/movesense)
MESSAGE(STATUS "MOVESENSE_INCLUDE_DIR: " ${MOVESENSE_INCLUDE_DIR})

FIND_LIBRARY(MOVESENSE_LIBRARY libmovesense.so /usr/lib /usr/local/lib)
MESSAGE(STATUS "MOVESENSE_LIBRARY: " ${MOVESENSE_LIBRARY})


IF (MOVESENSE_INCLUDE_DIR AND MOVESENSE_LIBRARY)
    SET(MOVESENSE_FOUND TRUE)
ENDIF(MOVESENSE_INCLUDE_DIR AND MOVESENSE_LIBRARY)

IF (MOVESENSE_FOUND)
    # 若FIND_PACKAGE命令没有指定QUIET参数，那下面的IF语句就为真
    IF (NOT MOVESENSE_FIND_QUIETLY)
        MESSAGE(STATUS "Found MOVESENSE: ${MOVESENSE_LIBRARY}")
    ENDIF (NOT MOVESENSE_FIND_QUIETLY)
ELSE (MOVESENSE FOUND)
    # 如果FIND_PACKAGE命令指定了REQUIRED参数，说明这个库是此Project必须的
    # 对应下面的MOVESENSE_FIND_REQUIRED变量
    IF (MOVESENSE_FIND_REQUIRED)
        MESSAGE(FATAL_ERROR "Could not find MOVESENSE library")
    ENDIF (MOVESENSE_FIND_REQUIRED)
ENDIF (MOVESENSE_FOUND)

